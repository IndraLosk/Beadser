<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Figures">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@color/darkbrain"
                android:gravity="clip_vertical"
                android:onClick="Back"
                android:text="←"
                android:textColor="@color/text"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkbrain"
                android:gravity="center"
                android:text="Фигуры"
                android:textColor="@color/text"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Для просмотра инструкции, нажмите на понравившееся изображение. Перед просмотром рекомендуется ознакомится с техникой плетения амигуруми"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/brain"
                        android:gravity="center"
                        android:text="Ящерица"
                        android:layout_weight="1"
                        android:textColor="@color/text"
                        android:textSize="34sp" />

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/brain"
                        android:backgroundTint="@color/brain"
                        android:onClick="LizardFavorite"
                        app:srcCompat="@drawable/notfavorite"  />
                </LinearLayout>

                <ImageView
                    android:id="@+id/lizard"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:onClick="Lizard"
                    app:srcCompat="@drawable/lizard01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brain"
                    android:gravity="center"
                    android:text="Лисица"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@color/brain"
                    android:backgroundTint="@color/brain"
                    android:onClick="FoxFavorite"
                    app:srcCompat="@drawable/notfavorite"  />
            </LinearLayout>

            <ImageView
                android:id="@+id/fox"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:onClick="Fox"
                app:srcCompat="@drawable/fox01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brain"
                    android:gravity="center"
                    android:text="Капибара"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@color/brain"
                    android:backgroundTint="@color/brain"
                    android:onClick="CapybaraFavorite"
                    app:srcCompat="@drawable/notfavorite"  />
            </LinearLayout>

            <ImageView
                android:id="@+id/capybara"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:onClick="Capybara"
                app:srcCompat="@drawable/capybara01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brain"
                    android:gravity="center"
                    android:text="Ам Ням"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@color/brain"
                    android:backgroundTint="@color/brain"
                    android:onClick="UmyumFavorite"
                    app:srcCompat="@drawable/notfavorite"  />
            </LinearLayout>

            <ImageView
                android:id="@+id/umyum"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:onClick="Umyum"
                app:srcCompat="@drawable/umyum01" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>